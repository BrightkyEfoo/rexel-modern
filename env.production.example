# KesiMarket Modern Frontend - Production Environment Variables
# Copy this file to .env.production and update the values

# ===== ENVIRONMENT =====
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ===== APPLICATION =====
NEXT_PUBLIC_APP_NAME="KesiMarket Modern"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ===== PRODUCTION DOMAINS & URLs =====
# For production deployment
NEXT_PUBLIC_API_URL=https://api.kesimarket.com
NEXTAUTH_URL=https://kesimarket.com
NEXT_PUBLIC_SITE_URL=https://kesimarket.com

# ===== STAGING DOMAINS & URLs =====
# For staging deployment (comment out production URLs above and uncomment these)
# NEXT_PUBLIC_API_URL=https://staging-api.kesimarket.com
# NEXTAUTH_URL=https://staging.kesimarket.com
# NEXT_PUBLIC_SITE_URL=https://staging.kesimarket.com

# ===== SECURITY =====
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# ===== SSL/TLS =====
# Email for Let's Encrypt certificates
ACME_EMAIL=admin@kesimarket.com

# ===== API CONFIGURATION =====
NEXT_PUBLIC_API_VERSION=v1

# ===== ANALYTICS & MONITORING =====
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_GTM_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ===== FEATURES FLAGS =====
NEXT_PUBLIC_ENABLE_FEATURES=auth,cart,favorites,search

# ===== CDN & ASSETS =====
NEXT_PUBLIC_CDN_URL=https://cdn.kesimarket.com
NEXT_PUBLIC_ASSETS_URL=https://assets.kesimarket.com

# ===== SOCIAL AUTH (Optional) =====
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===== PAYMENT (Optional) =====
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# ===== EMAIL (Optional) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ===== REDIS (Optional for caching) =====
REDIS_URL=redis://localhost:6379

# ===== FEATURE FLAGS =====
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ===== SEO & METADATA =====
NEXT_PUBLIC_SITE_NAME="KesiMarket Modern"
NEXT_PUBLIC_SITE_DESCRIPTION="Modern e-commerce platform"
NEXT_PUBLIC_DEFAULT_LOCALE=fr

# ===== CURRENCY =====
NEXT_PUBLIC_CURRENCY_SYMBOL=â‚¬
NEXT_PUBLIC_CURRENCY_CODE=EUR
NEXT_PUBLIC_CURRENCY_NAME=Euro 