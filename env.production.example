# Rexel Modern Frontend - Production Environment Variables
# Copy this file to .env.production and update the values

# ===== GENERAL CONFIGURATION =====
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ===== APPLICATION =====
NEXT_PUBLIC_APP_NAME="Rexel Modern"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ===== DOMAINS & URLs =====
FRONTEND_DOMAIN=yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXTAUTH_URL=https://yourdomain.com

# ===== SECURITY =====
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# ===== SSL/TLS =====
# Email for Let's Encrypt certificates
ACME_EMAIL=admin@yourdomain.com

# ===== API CONFIGURATION =====
# Backend API endpoints
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_API_VERSION=v1

# ===== ANALYTICS & MONITORING =====
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_GTM_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ===== FEATURES FLAGS =====
NEXT_PUBLIC_ENABLE_FEATURES=auth,cart,favorites,search

# ===== CDN & ASSETS =====
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_ASSETS_URL=https://assets.yourdomain.com

# ===== SOCIAL AUTH (Optional) =====
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===== PAYMENT (Optional) =====
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# ===== EMAIL (Optional) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ===== REDIS (Optional for caching) =====
REDIS_URL=redis://localhost:6379

# ===== FEATURE FLAGS =====
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ===== SEO & METADATA =====
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME="Rexel Modern"
NEXT_PUBLIC_SITE_DESCRIPTION="Modern e-commerce platform"
NEXT_PUBLIC_DEFAULT_LOCALE=fr 